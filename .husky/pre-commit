#!/bin/sh
# Husky pre-commit hook

# Check for secrets with secretlint
echo "ğŸ” Checking for secrets with secretlint..."
if ! bunx secretlint "**/*"; then
  echo "âŒ Secretlint detected potential secrets in your commit!"
  echo "Please remove any secrets before committing."
  exit 1
fi
echo "âœ… No secrets detected"

# Run lint-staged (handles linting and formatting)
echo "ğŸ” Running lint and format checks..."
bunx lint-staged